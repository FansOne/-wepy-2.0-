        .shopIntroduce-content{
            font-size: 28rpx;
            letter-spacing: 3rpx;
            padding-left: 30rpx;
            padding-right: 0;
            padding-top: 15rpx;
            padding-bottom: 15rpx;
            line-height: 45rpx;
            text-align: justify;
        }      
    }
    .shopIntroduce-image{
        border-radius: 8rpx;
        height: 365rpx;
        margin-bottom: 15rpx;
        display: flex;
        flex-direction: row;
        justify-content: center;
        image{
            height: 365rpx !important;
            border-radius: 8rpx;
        }
    }
    //买单
    .merchantTel{
        position: fixed;
		width: 43px;
        height: 43px;
		border-radius:50%;
		box-shadow: 8px 6px 8px #DCDCDC;
        z-index: 100;
        background-color: #ee6c4b;
        text-align: center;
