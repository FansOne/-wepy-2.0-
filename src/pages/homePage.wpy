            }
            .contact{
                // border: 1px solid red;
                padding: 0 20rpx;
                display: flex;
                align-items: center;
                flex-direction: row;
                margin-top: 20rpx;
                justify-content: space-between;
                view:nth-child(1){
                    display: flex;
